<mvc:View
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  controllerName="walkthrough.controller.InvoiceList"
  displayBlock="true">
  
  <Page title="{i18n>invoiceListTitle}">
    <content>
      <SearchField
        id="searchField"
        width="100%"
        placeholder="Pesquise por ID, 'completo', 'pendente' ou tÃ­tulo..."
        liveChange=".onSearch"
        showSearchButton="false"/>
      
      <List
        id="invoiceList"
        items="{invoice>/}">
        <items>
          <ObjectListItem
            title="{invoice>title}"
            type="Navigation"
            press=".onItemPress">
            <attributes>
              <ObjectAttribute text="ID: {invoice>id}"/>
              <ObjectAttribute text="User ID: {invoice>userId}"/>
            </attributes>
            <firstStatus>
              <ObjectStatus 
                text="{= ${invoice>completed} ? 'Completo' : 'Pendente' }"
                state="{= ${invoice>completed} ? 'Success' : 'Warning' }"
                class="statusPadding"/>
            </firstStatus>
          </ObjectListItem>
        </items>
      </List>
    </content>
  </Page>
</mvc:View>